<div id="faq">
    <div class="container">
        <div class="menu_faq">
            <h1 class="page_title">{{ 'FAQ' | t }}</h1>
            <ul class="nav nav-pills" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">{{ 'Liên quan đến hợp đồng' | t }}</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">{{ 'Liên quan đến các chi phí' | t }}</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">{{ 'Liên quan đến nhà' | t }}</button>
                </li>
            </ul>
        </div>
        

        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

                <div class="accordion" id="accordionTabOne">
                    {% for item in items_1 %}
                    {% if loop.index == 1 %}
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="panelsStayOpen-{{ loop.index }}">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#panelsStayOpen--{{ loop.index }}" aria-expanded="true"
                                aria-controls="panelsStayOpen--{{ loop.index }}">
                                <span>{{ loop.index }}</span>{{ item.title }}
                            </button>
                        </h2>
                        <div id="panelsStayOpen--{{ loop.index }}" class="accordion-collapse collapse show"
                            aria-labelledby="panelsStayOpen-{{ loop.index }}">
                            <div class="accordion-body">
                                {{ item.desc }}
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="panelsStayOpen-{{ loop.index }}">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#panelsStayOpen--{{ loop.index }}" aria-expanded="false"
                                aria-controls="panelsStayOpen--{{ loop.index }}">
                                <span>{{ loop.index }}</span>{{ item.title }}
                            </button>
                        </h2>
                        <div id="panelsStayOpen--{{ loop.index }}" class="accordion-collapse collapse"
                            aria-labelledby="panelsStayOpen-{{ loop.index }}">
                            <div class="accordion-body">
                                {{ item.desc }}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
                
            </div>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">

