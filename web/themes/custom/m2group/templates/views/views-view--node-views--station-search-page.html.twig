{{ attach_library('m2group/search') }}

{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
    'container',
    'search-page',
    'station-search'
  ]
%}
<div class="search-page-wrapper">
  <div{{ attributes.addClass(classes) }}>
    <div class="box-search-wrapper">
      <span>{{ 'Tìm kiếm theo tên ga'|t }}</span>
      <div class="flat-type">
          <div class="item for-rent checked">
              <input id="for_rent" type="radio" name="flat_type" value="0" checked>
              <label for="for_rent">{{ 'Cho thuê'|t }}</label>
          </div>
          <div class="item for-sale">
              <input id="for_sale" type="radio" name="flat_type" value="1">
              <label for="for_sale">{{ 'Mua bán'|t }}</label>
          </div>
      </div>
      <div class="box-search">
        <div class="input-wrapper">
          <div class="_select">
            <select name="_select" id="_select">
              <option value="default">{{ 'Tên ga'|t }}</option>
            </select>
          </div>
          <div class="img-wrapper">
            <span class="text">{{ 'Tìm kiếm'|t }}</span>
            <img src="/themes/custom/m2group/images/search.svg">
          </div>
        </div>
      </div>
      <div class="advance-filter">
          <div class="filter-box">
              <div class="select-box"></div>
          </div>
          <div class="filter-btn">
              <div class="close-state">{{ 'Tìm kiếm nâng cao'|t }}</div>
              <div class="open-state">{{ 'Ẩn'|t }}</div>
          </div>
      </div>
    </div>

    {{ exposed }}

    <div class="station_lv4_data" style="display:none">
      {% set data = drupal_view_result('taxonomy_views', 'station_lv4') %}
      {% for item in data %}
        {% set t = term(item.tid) %}
        <div class="item" value="{{ item.tid }}">{{ t.name() }}</div>
      {% endfor %}
    </div>
  </div>
</div>
